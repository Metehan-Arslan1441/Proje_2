<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ArsMobilya</title>
   
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proje1.styles.css" asp-append-version="true" />
</head>
<body style="background-color:white;">
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3 " ; style="background-color:dimgray;">
            <img src="~/resim/gh.jpg"  style="width:100px; height:100px;"/>
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ArsMobilya</a>
                &nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" >
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">ürünlerimiz</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <li class="nav-item" style="border:none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">iletişim bilgileri</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <li class="nav-item" style="border:none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ekleSayfa">ekle</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <li class="nav-item" style="border:none;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="listelecard">ürün cardlarımız</a>
                        </li>
                        &nbsp;&nbsp;&nbsp;&nbsp;


                    </ul>
                </div>

                <div class="arba">

                </div>
            </div>
            <div class="mt-2" style="width:20%">
                <form asp-action="arama">
                   
                    <div class="mb-3">
                       
                        <input name="Ad" type="text" class="form-control" />
                    </div>
                    @if (TempData["msg"] != null)
                    {
                        <div class="mb-3">
                            @TempData["msg"]
                        </div>
                    }
                    <a type="submit" class="btn btn-primary">Ara</a>
                </form>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
