@model IEnumerable< proje1.Models.Domain.Person>

<div class="mt-2" style="width:50%">
    <form asp-action="arama">
        <h2>öğrenci arama</h2>
        <div class="mb-3">
            <label name="Ad" class="form-label">Ad</label>
            <input name="Ad" type="text" class="form-control" />
        </div>
        @if (TempData["msg"] != null)
        {
            <div class="mb-3">
                @TempData["msg"]
            </div>
        }
        <button type="submit" class="btn btn-primary">Ara</button>
    </form>
</div>